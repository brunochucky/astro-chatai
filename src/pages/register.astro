---
import Layout from "../layouts/Layout.astro";
import logoSrc from "../assets/logo.webp";
import RegisterForm from "../components/RegisterForm.vue";
---

<Layout title="Registrar">
  <div
    class="min-h-screen flex flex-col items-center justify-center bg-gray-100 px-6"
  >
    <!-- Logo -->
    <div class="mb-6">
      <img src={logoSrc.src} alt="Logo" class="h-20 w-auto" />
    </div>
    <!-- Formulário -->
    <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-2xl font-bold text-gray-800 text-center mb-4">
        Cadastre-se
      </h1>
      <p class="text-sm text-gray-600 text-center mb-6">
        Já tem uma conta?
        <a href="/login" class="text-blue-500 hover:underline font-medium">
          Entrar
        </a>
      </p>
      <RegisterForm client:visible />
    </div>
  </div>
</Layout>
